<h1>Listing tenants</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tenants.each do |tenant| %>
      <tr>
        <td><b><%= tenant.name %></b></td>
        <td><b><%= link_to 'Go to site', "http://#{tenant.name}.localhost.com:3000/forums" %></b></td>
        <td><%= link_to 'Show', tenant %></td>
        <!--< %= link_to 'Edit', edit_tenant_path(tenant) %></td>-->
        <td><%= link_to 'Destroy', tenant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tenant', new_tenant_path %>
